require 'fileutils'
require_relative 'logger.rb'
require_relative 'commander.rb'
require_relative 'builder.rb'
require_relative 'cache.rb'


# #define LIBCURL_VERSION "7.41.0-DEV"
#
def check_version(srcdir, version)
  v = File.read("#{srcdir}/include/curl/curlver.h").split("\n").select { |s| s =~ /LIBCURL_VERSION/ }
  raise "can't find 'LIBCURL_VERSION' string" if !v or v.size == 0
  srcver = v[0].split(' ')[2].delete('"').split('-')[0]
  if srcver != version
    raise "bad curl version: repository: #{srcver}; expected: #{version}"
  end
end


PKG_NAME = 'curl'


begin
  options = Common.parse_build_options PKG_NAME
  Logger.open_log_file options.log_file, options.rename_log?, options.verbose?
  Logger.start_msg PKG_NAME, options.target_platform

  ver, bldnum, paths, archive = Common.make_build_data PKG_NAME, options

  if !options.force? and Cache.try?(archive)
    Logger.msg "done"
    exit 0
  end

  paths[:zlib_dir]    = Builder.build_zlib    options, paths
  paths[:openssl_dir] = Builder.build_openssl options, paths
  paths[:libssh2_dir] = Builder.build_libssh2 options, paths

  Logger.log_msg "= building #{archive}; args: #{ARGV}"
  check_version paths[:src_dir], ver
  Builder.copy_sources paths[:src_dir], paths[:build_base_dir]
  FileUtils.mkdir_p(paths[:install_dir])
  prefix = Pathname.new(paths[:install_dir]).realpath
  FileUtils.cd(paths[:build_dir]) do
    Commander.run "./buildconf"
    env = { 'CC' => Builder.cc(options.target_os),
            'CFLAGS' => "#{Builder.cflags(options.target_platform)} -DCURL_STATICLIB",
            'LANG' => 'C'
          }
    env['LDFLAGS'] = ' -ldl' if options.target_os == 'linux'
    # "--enable-debug",
    # "--with-sysroot=#{Common::NDK_ROOT_DIR}/platform/prebuilts/gcc/linux-x86/host/x86_64-linux-glibc2.11-4.8/sysroot"
    args = ["--prefix=#{prefix}",
            "--host=#{Builder.configure_host(options.target_platform)}",
            "--disable-shared",
            "--disable-ldap",
            "--with-ssl=#{paths[:openssl_dir]}",
            "--with-zlib=#{paths[:zlib_dir]}",
            "--with-libssh2=#{paths[:libssh2_dir]}"
           ]
    Commander::run env, "./configure #{args.join(' ')}"
    Commander::run env, "make -j #{options.num_jobs}"
    Commander::run env, "make test" unless options.no_check?
    Commander::run env, "make install"
  end

  Cache.add archive, paths[:build_base_dir]
  # todo:
  # Cache.unpack(archive)

rescue SystemExit => e
  exit e.status
rescue Exception => e
  Logger.log_exception(e)
  exit 1
else
  FileUtils.rm_rf paths[:build_base_dir] unless options.no_clean?
end
