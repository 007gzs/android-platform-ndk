gen()
{
    local name=$1
    local val=$2

    echo "#if !defined(${name})"
    echo "#error '${name}' not defined"
    echo "#endif /* !defined(${name}) */"
}

echo "#if __LIBCRYSTAX"
gen __CRYSTAX_COMPLEX_H_INCLUDED
gen __CRYSTAX_MATH_H_INCLUDED
echo "#endif"

gen acos
gen asin
gen atan
gen acosh
gen asinh
gen atanh
gen cos
gen sin
gen tan
gen cosh
gen sinh
gen tanh
gen exp
gen log
gen pow
gen sqrt
gen fabs

gen atan2
gen cbrt
gen ceil
gen copysign
gen erf
gen erfc
gen exp2
gen expm1
gen fdim
gen floor
gen fma
gen fmax
gen fmin
gen fmod
gen frexp
gen hypot
gen ilogb
gen ldexp
gen lgamma
gen llrint
gen llround
gen log10
gen log1p
gen log2
echo "#if !__APPLE__ || !defined(__clang__) || __clang_major__ > 2"
gen logb
echo "#endif"
gen lrint
gen lround
gen nearbyint
gen nextafter
gen nexttoward
gen remainder
gen remquo
gen rint
gen round
gen scalbln
gen scalbn
gen tgamma
gen trunc

gen carg
gen cimag
gen conj
gen cproj
gen creal
