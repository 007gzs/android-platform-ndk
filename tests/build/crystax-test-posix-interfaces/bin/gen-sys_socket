gen()
{
    local name=$1
    echo "#if !defined(${name})"
    echo "#error '${name}' not defined"
    echo "#endif /* !defined(${name}) */"
}

gen SCM_RIGHTS

gen CMSG_DATA
gen CMSG_NXTHDR
gen CMSG_FIRSTHDR

gen SOCK_DGRAM
gen SOCK_SEQPACKET
gen SOCK_STREAM

echo "#if _POSIX_RAW_SOCKETS > 0"
gen SOCK_RAW
echo "#endif"

gen SOL_SOCKET

gen SO_ACCEPTCONN
gen SO_BROADCAST
gen SO_DEBUG
gen SO_DONTROUTE
gen SO_ERROR
gen SO_KEEPALIVE
gen SO_LINGER
gen SO_OOBINLINE
gen SO_RCVBUF
gen SO_RCVLOWAT
gen SO_RCVTIMEO
gen SO_REUSEADDR
gen SO_SNDBUF
gen SO_SNDLOWAT
gen SO_SNDTIMEO
gen SO_TYPE

gen SOMAXCONN

gen MSG_CTRUNC
gen MSG_DONTROUTE
gen MSG_EOR
gen MSG_OOB
echo "#if !__APPLE__"
gen MSG_NOSIGNAL
echo "#endif"
gen MSG_PEEK
gen MSG_TRUNC
gen MSG_WAITALL

gen AF_INET
gen AF_UNIX
gen AF_UNSPEC

echo "#if _POSIX_IPV6 > 0"
gen AF_INET6
echo "#endif"

gen SHUT_RD
gen SHUT_RDWR
gen SHUT_WR
