gen()
{
    local name=$1
    local val=$2

    echo "#if !defined(${name})"
    echo "#error '${name}' not defined"
    echo "#endif /* !defined(${name}) */"

    if [ -n "$val" ]; then
        echo "#if ${name} != ${val}"
        echo "#error '${name}' not equal to ${val}"
        echo "#endif"
    fi
}

gen TMAGIC
gen TMAGLEN 6
gen TVERSION
gen TVERSLEN 2

gen REGTYPE  "'0'"
gen AREGTYPE "'\0'"
gen LNKTYPE  "'1'"
gen SYMTYPE  "'2'"
gen CHRTYPE  "'3'"
gen BLKTYPE  "'4'"
gen DIRTYPE  "'5'"
gen FIFOTYPE "'6'"
gen CONTTYPE "'7'"

gen TSUID    04000
gen TSGID    02000
gen TSVTX    01000
gen TUREAD   00400
gen TUWRITE  00200
gen TUEXEC   00100
gen TGREAD   00040
gen TGWRITE  00020
gen TGEXEC   00010
gen TOREAD   00004
gen TOWRITE  00002
gen TOEXEC   00001
